@model List<OrderView.Models.Products>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/style.css" />

    <title>Index</title>



</head>
<!--Creating the Table Dashboard-->
<body>
    <div align="center">
        <h1>Edit</h1>
        <input type="text" id="myInput" onkeyup="tablesearch()" placeholder="Search">
        <ul class="list-group" id="list"></ul>
    </div>
    <br />
    <br />
    <div>
        <table class="table" id="myTable" data-filter-control="true" data-show-search-clear-button="true" width="30%" height="30%">
            <tr>
                <th>Name</th>
                <th>Mobile</th>
                <th>Address</th>
            </tr>

            @foreach (OrderView.Models.Products item in @Model)
            {
            <tr class="table-row">

                <td>
                    @item.Name
                </td>
                <td>
                    @item.Mobile
                </td>
                <td>
                    @Html.ActionLink("View", "Address", new { AddressString = item.Address }, new { @class = "btn btn-light" })
                    @Html.ActionLink("Update", "Updates", new { updateString = item.Update }, new { @class = "btn btn-success" })
                </td>
            </tr>
            }
        </table>
    </div>
    <script src="~/Content/customer.js"></script>
    <footer> &copy; 2022 Arena-DevOps</footer>
</body>

</html>



















